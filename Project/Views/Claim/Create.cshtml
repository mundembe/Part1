@{
    ViewData["Title"] = "Submit a Claim";
}

<h2>Submit a New Claim</h2>

<form method="post" action="/Claim/Create">
    <div class="form-group">
        <label for="hoursWorked">Hours Worked</label>
        <input type="number" id="hoursWorked" name="hoursWorked" class="form-control" />
    </div>
    <div class="form-group">
        <label for="hourlyRate">Hourly Rate</label>
        <input type="number" id="hourlyRate" name="hourlyRate" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Submit Claim</button>
</form>